        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="144dp"></Button>

    <Button
        android:id="@+id/btnCourseDetailsInMyCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
